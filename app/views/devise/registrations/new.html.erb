<div class="col-sm-6 col-sm-offset-3">
  <div class="form-box" id="login-box">
    <div class="header">Sign Up or <%= link_to 'Sign In', new_user_session_path %></div>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <div class="body bg-gray">
            <div class="margin text-center">
              <%= link_to user_omniauth_authorize_path(:linkedin), class: 'btn btn-social btn-linkedin btn-sm' do %>
                <i class="fa fa-linkedin"></i>
                  Sign up with LinkedIn
              <% end %>
              <p>Donâ€™t have a LinkedIn account?<br>
              Enter your email address below:</p>
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-envelope fa-fw"></i></span>
                <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
            </div>
        </div>
        <div class="footer">
            <%= f.submit "Sign Me Up", class: 'btn btn-info btn-block' %>
            
            <%= render "devise/shared/links" %>
        </div>
    <% end %>
  </div>
</div>
